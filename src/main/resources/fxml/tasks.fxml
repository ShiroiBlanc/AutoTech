<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.TasksController">
    <Label text="Task Management" />
    <TableView fx:id="taskTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" />
            <TableColumn text="Title" fx:id="titleColumn" />
            <TableColumn text="Description" fx:id="descriptionColumn" />
            <TableColumn text="Status" fx:id="statusColumn" />
        </columns>
    </TableView>
    <Button text="Add Task" onAction="#addTask" />
</VBox>
