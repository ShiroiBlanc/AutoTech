<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ForgotPasswordController">
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
    <Button text="Reset Password" onAction="#handleResetPassword"/>
    <Button text="Back to Login" onAction="#switchToLogin"/>
    <Label fx:id="messageLabel"/>
</VBox>
