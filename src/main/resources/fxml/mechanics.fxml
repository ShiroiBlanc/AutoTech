<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.MechanicController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Mechanics Management" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Search mechanics..." prefWidth="200"/>
                <ComboBox fx:id="filterStatusComboBox" promptText="Filter by status" prefWidth="150" />
                <Button text="Search" onAction="#handleSearchMechanics"/>
                <Button text="Refresh" onAction="#handleRefreshMechanics"/>
            </HBox>
            
            <HBox>
                <Label fx:id="totalMechanicsLabel" text="Total mechanics: 0"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="addMechanicButton" text="Set Specialty" onAction="#handleAddMechanic"/>
            </HBox>
            
            <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
        </VBox>
    </top>
    
    <center>
        <TabPane fx:id="mechanicTabPane">
            <Tab text="All Mechanics" closable="false">
                <content>
                    <VBox>
                        <TableView fx:id="mechanicTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" text="Mechanic ID" prefWidth="100"/>
                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="130"/>
                                <TableColumn fx:id="specialtyColumn" text="Specialty" prefWidth="140"/> 
                                <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="90"/>
                                <TableColumn fx:id="currentJobsColumn" text="Jobs" prefWidth="60"/>
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180"/>
                            </columns>
                        </TableView>
                        <Pagination fx:id="mechanicPagination" pageCount="1"/>
                    </VBox>
                </content>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
