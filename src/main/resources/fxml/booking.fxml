<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.ServiceBookingController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Service Bookings Management" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Search bookings..." prefWidth="200"/>
                <ComboBox fx:id="filterStatusComboBox" promptText="Filter by status" prefWidth="150"/>
                <DatePicker fx:id="filterDatePicker" promptText="Filter by date" prefWidth="150"/>
                <Button text="Search" onAction="#handleSearchBookings"/>
                <Button text="Refresh" onAction="#handleRefreshBookings"/>
            </HBox>
            
            <HBox>
                <Label fx:id="totalBookingsLabel" text="Total bookings: 0"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Add New Booking" onAction="#handleAddBooking"/>
            </HBox>
            
            <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
        </VBox>
    </top>
    
    <center>
        <TabPane fx:id="bookingTabPane">
            <Tab text="All Bookings" closable="false">
                <content>
                    <TableView fx:id="bookingTable">
                        <columns>
                            <TableColumn fx:id="idColumn" text="Booking ID" prefWidth="120"/>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                            <TableColumn fx:id="timeColumn" text="Time" prefWidth="80"/>
                            <TableColumn fx:id="customerNameColumn" text="Customer" prefWidth="150"/>
                            <TableColumn fx:id="vehicleColumn" text="Vehicle" prefWidth="150"/>
                            <TableColumn fx:id="mechanicColumn" text="Mechanic" prefWidth="120"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="250"/>
                        </columns>
                    </TableView>
                </content>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
